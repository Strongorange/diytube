extends base

block content 
    if errorMessage
        span=errorMessage

    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video
        input(type="file", placeholder="Video", name="video", accept="video/*")
        input(type="text", placeholder="Title", required, name="title")
        input(type="text", placeholder="description", required, name="description")
        input(type="text", placeholder="hashtag seperate by ,", required, name="hashtags")
        input(type="submit", value="Upload Video")